{
    "manifest_version": 2,
    "name":"chorme web tools",
    "description":"Page scorll position , double top or down ",
    "version":"1.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "icons": { 
        "16": "./icon.png",
        "128": "./icon.png"
    },
    "browser_action": {
        "default_title": "WebLookTools",
        "default_icon": "./icon.png"
    },
    "permissions":[
        "tabs",
        "https://*/*",
        "http://*/*",
        "contextMenus",
        "activeTab",
        "background",
        "storage"
    ]
}